<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.foad.doodle.DoodleActivity">


    <com.example.foad.doodle.ColorPicker
        android:id="@+id/brush_color_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_picker_height"/>

    <ImageView
        android:id="@+id/bitmap_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.example.foad.doodle.ColorPicker
        android:id="@+id/background_color_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_picker_height"/>

</LinearLayout>
